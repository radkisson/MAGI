# ============================================================================
# RIN Environment Configuration
# Rhyzomic Intelligence Node - Sovereign AI Organism
# ============================================================================

# ============================================================================
# THE CORTEX (Cognition) - Open WebUI + LiteLLM
# ============================================================================

# LLM Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Local Ollama (optional, for privacy-focused models)
OLLAMA_API_BASE=http://host.docker.internal:11434

# LiteLLM Configuration
LITELLM_MASTER_KEY=sk-1234-change-this-to-secure-key

# Open WebUI Configuration
WEBUI_AUTH=false  # Set to true to enable authentication
WEBUI_NAME=RIN Cortex

# ============================================================================
# THE SENSORIUM (Perception) - SearXNG + FireCrawl
# ============================================================================

# SearXNG Configuration
SEARXNG_SECRET=changeme-to-secure-random-string

# FireCrawl Configuration
FIRECRAWL_API_KEY=fc-dev-key-change-in-production

# ============================================================================
# THE MEMORY (Recall) - Qdrant Vector Database
# ============================================================================

# Qdrant Configuration
QDRANT_ALLOW_RECOVERY_MODE=true

# ============================================================================
# THE NERVOUS SYSTEM (Reflex) - Redis Message Bus
# ============================================================================

# Redis Configuration (defaults are usually fine)
REDIS_URL=redis://redis:6379

# ============================================================================
# SUPPORTING INFRASTRUCTURE
# ============================================================================

# PostgreSQL (for LiteLLM metadata)
POSTGRES_DB=litellm
POSTGRES_USER=litellm
POSTGRES_PASSWORD=litellm

# ============================================================================
# LOGGING AND MONITORING
# ============================================================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Network Configuration
COMPOSE_PROJECT_NAME=rin

# Data Persistence
DATA_DIR=./data
