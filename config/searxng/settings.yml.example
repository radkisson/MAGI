# SearXNG Settings for RIN
# Uses default settings as base and overrides specific values
# The secret_key will be auto-generated by start.sh if not present

use_default_settings: true

general:
  instance_name: "RIN Vision"

server:
  secret_key: "REPLACE_WITH_RANDOM_SECRET"
  bind_address: "0.0.0.0"
  image_proxy: true
  limiter: false

search:
  safe_search: 0
  autocomplete: ""
  formats:
    - html
    - json

ui:
  static_use_hash: true
  default_locale: "en"

outgoing:
  request_timeout: 10.0
  max_request_timeout: 15.0

# Enable academic/scientific engines by overriding defaults
engines:
  - name: google scholar
    disabled: false

  - name: arxiv
    disabled: false

  - name: semantic scholar
    disabled: false

  - name: pubmed
    disabled: false

  - name: openalex
    disabled: false

  - name: crossref
    disabled: false

  - name: openlibrary
    disabled: false

  - name: wikipedia
    disabled: false

  - name: wikidata
    disabled: false

  # Disable problematic engines
  - name: ahmia
    disabled: true

  - name: torch
    disabled: true
