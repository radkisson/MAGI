# SearXNG Settings Template for RIN
# Copy this to settings.yml and customize as needed
# The secret_key will be auto-generated by start.sh if not present

use_default_settings: true
server:
  secret_key: "REPLACE_WITH_RANDOM_SECRET"
  bind_address: "0.0.0.0"
  image_proxy: true
  limiter: false
search:
  formats:
    - html
    - json

# Academic & Scientific Search Engines
# These engines enable research queries for papers, books, and science
engines:
  # --- GENERAL SEARCH ---
  - name: google
    engine: google
    shortcut: g
    disabled: false
  
  - name: duckduckgo
    engine: duckduckgo
    shortcut: ddg
    disabled: false
  
  - name: bing
    engine: bing
    shortcut: b
    disabled: false

  # --- ACADEMIC & SCIENTIFIC ---
  - name: google scholar
    engine: google_scholar
    shortcut: gs
    disabled: false
    categories: [science, it]

  - name: arxiv
    engine: arxiv
    shortcut: arx
    disabled: false
    categories: [science, it]
    timeout: 10.0

  - name: semantic scholar
    engine: semantic_scholar
    shortcut: ss
    disabled: false
    categories: [science]

  - name: pubmed
    engine: pubmed
    shortcut: pm
    disabled: false
    categories: [science]

  - name: base (bielefeld academic)
    engine: base
    shortcut: base
    disabled: false
    categories: [science]

  - name: openalex
    engine: openalex
    shortcut: oa
    disabled: false
    categories: [science]

  - name: crossref
    engine: crossref
    shortcut: cr
    disabled: false
    categories: [science]

  # --- BOOKS & LIBRARIES ---
  - name: openlibrary
    engine: openlibrary
    shortcut: ol
    disabled: false
    categories: [general]

  # Note: archive_is engine removed - not available in latest SearXNG version
  # - name: internet archive
  #   engine: archive_is
  #   shortcut: ia
  #   disabled: false
  #   categories: [general]

  # Note: annas_archive disabled to avoid ambiguous shortcut conflict
  # - name: z-library (via anna's archive)
  #   engine: annas_archive
  #   shortcut: aa
  #   disabled: false
  #   categories: [files]

  # --- WIKIS & ENCYCLOPEDIAS ---
  - name: wikipedia
    engine: wikipedia
    shortcut: w
    disabled: false

  - name: wikidata
    engine: wikidata
    shortcut: wd
    disabled: false

# Categories for filtering
categories_as_tabs:
  general:
  science:
  it:
  files:
